<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/frontback"
    tools:context=".Fragments.ThirdFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="#BEAC0A91"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView

            android:id="@+id/skip"
            style="@style/textStyle"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="52dp"
            android:text="Skip"
            app:layout_constraintBottom_toTopOf="@+id/udacity"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView

            android:id="@+id/udacity"
            style="@style/textStyle"
            android:layout_marginStart="148dp"
            android:layout_marginLeft="148dp"
            android:layout_marginBottom="116dp"
            android:text="U D A C I T Y"
            app:layout_constraintBottom_toTopOf="@+id/freeCourse"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/freeCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="70dp"
            android:text="Free Course"
            android:textColor="@color/ms_white"
            android:textIsSelectable="true"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@id/explore"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="10dp"
            android:background="@color/ms_white"
            app:layout_constraintBottom_toBottomOf="@id/freeCourse"
            app:layout_constraintBottom_toTopOf="@id/explore"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="160dp"
            android:text="Explore Machine"
            android:textColor="@color/ms_white"
            android:textSize="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/learning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="10dp"
            android:text="Learning"
            android:textColor="@color/ms_white"
            android:textSize="32dp"
            app:layout_constraintTop_toBottomOf="@+id/explore"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="40dp"
            android:text="Learn More"
            android:textColor="@color/ms_white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/explore" />

        <View
            android:layout_width="93dp"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="2dp"
            android:background="@color/ms_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/learn" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>